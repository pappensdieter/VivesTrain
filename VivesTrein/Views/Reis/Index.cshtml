@model VivesTrein.ViewModels.ReisVM

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<h4>ReisVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naam" class="control-label"></label>
                <input asp-for="Naam" class="form-control" />
                <span asp-validation-for="Naam" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="VerstrekStadId" class="control-label">Vertrek Stad</label>
                <select asp-for="VerstrekStadId" asp-items="@ViewBag.lstStad">
                    <option>Selecteer een stad</option>
                </select>
                <span asp-validation-for="VerstrekStadId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AankomstStadId" class="control-label">Bestemming Stad</label>
                <select asp-for="AankomstStadId" asp-items="@ViewBag.lstStad">
                    <option>Selecteer een stad</option>
                </select>
                <span asp-validation-for="AankomstStadId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="BussinessClass" /> Bussiness class
                    </label>
                </div>
            </div>
            <div class="form-group"> @*berekend veld*@
                <label asp-for="Prijs" class="control-label"></label>
                <input asp-for="Prijs" class="form-control" />
                <span asp-validation-for="Prijs" class="text-danger"></span>
            </div>
            <div class="form-group"> @*moet nog dropdown worden met de datums van treinen*@
                <label asp-for="VertrekDatum" class="control-label">Vertrek Datum</label>
                <input asp-for="VertrekDatum" class="form-control" />
                <span asp-validation-for="VertrekDatum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

