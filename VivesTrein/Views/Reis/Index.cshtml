@model VivesTrein.ViewModels.ReisVM

@{
    ViewData["Title"] = "Index";
}

<h2>Reis</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index" id="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naam" class="control-label"></label>
                <input asp-for="Naam" id="Naam" class="form-control" />
                <span asp-validation-for="Naam" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="VerstrekStadId" class="control-label">Vertrek Stad</label>
                <select asp-for="VerstrekStadId" id="VerstrekStadId" asp-items="@ViewBag.lstStad">
                    <option>Selecteer een stad</option>
                </select>
                <span asp-validation-for="VerstrekStadId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AankomstStadId" class="control-label">Bestemming Stad</label>
                <select asp-for="AankomstStadId" id="AankomstStadId" asp-items="@ViewBag.lstStad">
                    <option>Selecteer een stad</option>
                </select>
                <span asp-validation-for="AankomstStadId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="BussinessClass" id="BussinessClass" /> Bussiness class
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="VertrekDatum" class="control-label">Vertrek Datum</label>
                <input asp-for="VertrekDatum" id="VertrekDatum" class="form-control" />
                <span asp-validation-for="VertrekDatum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aantal" class="control-label">Aantal</label>
                <input asp-for="Aantal" id="Aantal" type="number" min="1" max="10" />
                <span asp-validation-for="Aantal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" id="btn" class="btn btn-default" />
            </div>
        </form>
        @if (ViewBag.error != null)
        {
        <p style="color:red">@ViewBag.error</p>
        }
    </div>
    <div class="col-md-8">
        <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="5000">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
                <li data-target="#myCarousel" data-slide-to="4"></li>
                <li data-target="#myCarousel" data-slide-to="5"></li>
                <li data-target="#myCarousel" data-slide-to="6"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <a asp-action="Advert" asp-controller="Reis" asp-route-stadid="">
                        <img width="1280" height="720" src="~/images/Parijs-banner2.jpg" alt="ASP.NET" class="img-responsive" />
                        <div class="carousel-caption" role="option">
                            <p>
                                Paris
                            </p>
                        </div>
                    </a>
                </div>
                <div class="item">
                    <img width="1280" height="720" src="~/images/Londen-banner2.jpg" alt="Visual Studio" class="img-responsive" />
                    <div class="carousel-caption" role="option">
                        <p>
                            London
                        </p>
                    </div>
                </div>
                <div class="item">
                    <img width="1280" height="720" src="~/images/Amsterdam-banner2.jpg" alt="Microsoft Azure" class="img-responsive" />
                    <div class="carousel-caption" role="option">
                        <p>
                            Amsterdam
                        </p>
                    </div>
                </div>
                <div class="item">
                    <img width="1280" height="720" src="~/images/Brussel-banner2.jpg" alt="Microsoft Azure" class="img-responsive" />
                    <div class="carousel-caption" role="option">
                        <p>
                            Brussel
                        </p>
                    </div>
                </div>
                <div class="item">
                    <img width="1280" height="720" src="~/images/Rome-banner.jpg" alt="Microsoft Azure" class="img-responsive" />
                    <div class="carousel-caption" role="option">
                        <p>
                            Rome
                        </p>
                    </div>
                </div>
                <div class="item">
                    <img width="1280" height="720" src="~/images/Moskou-banner.jpg" alt="Microsoft Azure" class="img-responsive" />
                    <div class="carousel-caption" role="option">
                        <p>
                            Moskou
                        </p>
                    </div>
                </div>
                <div class="item">
                    <img width="1280" height="720" src="~/images/Berlijn-banner.jpg" alt="Microsoft Azure" class="img-responsive" />
                    <div class="carousel-caption" role="option">
                        <p>
                            Berlijn
                        </p>
                    </div>
                </div>
            </div>
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>


